</style>

<div class="modal-dialog">
  <div class="spinner-overlay" style="display: none">
    <div class="loader-dancing"></div>
  </div>

  <form id="upload-form" class="upload-container modal-content">
    <div class="upload-header modal-header">
      <h5 class="upload-title modal-title" id="uploadModalLabel">
        Upload Music ðŸŽ§
      </h5>
      <i
        onclick="$('#uploadModal').modal('hide')"
        class="bi bi-x-octagon text-danger"
        type="button"
        data-bs-dismiss="modal"
        aria-label="Close"
      ></i>
    </div>
    <div class="upload-body modal-body">
      <div class="left-side">
        <img id="preload-img" style="display: none" alt="Preload Image" />
        <div
          class="uploaded-thumbnail drop-zone"
          data-type="image"
          data-image-url="/assets/images/default_thumbnail_lq.jpg"
        >
          <div class="upload-icon">
            <i class="fa fa-file-image" aria-hidden="true"></i>
          </div>
          <input type="hidden" name="thumbnail" value="" />
        </div>
        <input
          type="file"
          name="thumbnail-upload"
          accept="image/*"
          id="thumbnail-upload"
          style="display: none"
        />
        <div class="drag-drop artist-music-name">
          <span>Unknown</span><span> - </span
          ><span class="music-name">Track</span>
        </div>
      </div>

      <div class="inputs right-side">
        <div class="input-group">
          <input
            name="artist"
            type="text"
            class="form-control"
            placeholder="Artist Name"
            required
          />
        </div>
        <div class="input-group">
          <input
            name="title"
            type="text"
            class="form-control"
            placeholder="Music Name"
            required
          />
        </div>

        <!-- Video Drop Zone -->
        <div class="drag-drop drop-zone video-drop" data-type="video">
          <span>
            <i
              class="fas fa-file-video"
              data-fa-transform="shrink-3 down-2 left-6 rotate--45"
            ></i>
            Drop video here, or <a href="javascript:void(0)">browse</a>
            <input
              name="video-upload"
              class="drop-browse"
              type="file"
              accept="video/*"
              style="display: none"
            />.
          </span>
          <input type="hidden" name="video" value="" />
          <div class="file-details" style="display: none">
            <i
              class="fas fa-file-video"
              data-fa-transform="shrink-3 down-2 left-6 rotate--45"
            ></i>
            <div class="file-name text-truncate" id="fileName"></div>
            <span aria-hidden="true" class="cancel-upload">
              <i class="fas fa-times"></i>
            </span>
          </div>
          <div class="progress-container" style="display: none">
            <div class="progress-bar"></div>
            <div class="progress-text"></div>
          </div>
        </div>

        <!-- Lyrics Drop Zone -->
        <div class="drag-drop drop-zone lyrics-drop" data-type="lyrics">
          <i
            class="fas fa-file-alt"
            data-fa-transform="shrink-3 down-2 left-6 rotate--45"
          ></i>
          <span
            >Drop Lyrics here, or <a href="javascript:void(0)">browse</a>
            <!-- <input class="drop-browse" type="file" name="video" accept="text/*" style="display: none">. -->
            <input
              class="drop-browse"
              type="file"
              name="lyrics-upload"
              accept="text/*"
              style="display: none"
            />.
          </span>
          <input type="hidden" name="lyrics" value="" />
          <div class="file-details" style="display: none">
            <i
              class="fas fa-file-alt"
              data-fa-transform="shrink-3 down-2 left-6 rotate--45"
            ></i>
            <div class="file-name text-truncate" id="fileName"></div>
            <span aria-hidden="true" class="cancel-upload">
              <i class="fas fa-times"></i>
            </span>
          </div>
          <div class="progress-container" style="display: none">
            <div class="progress-bar"></div>
            <div class="progress-text"></div>
          </div>
        </div>

        <!-- Youtube URL -->
        <div class="input-group flex-nowrap align-items">
          <input
            type="url"
            class="form-control border-primary text-primary border-right-0 youtube-url"
            placeholder="Enter youtube url here"
            aria-label="Username"
            aria-describedby="addon-wrapping"
          />
          <div
            id="fetch-ytvideo"
            class="input-group-prepend youtube-icon btn btn-primary border-primary"
            style="width: auto"
          >
            <i class="fab fa-youtube text-light" style="font-size: 1.5rem"></i>
          </div>
        </div>
      </div>
    </div>
    <!-- <div class="upload-footer"> -->
    <div class="modal-footer upload-footer border-0">
      <button type="submit" class="upload-btn">
        <i class="fas fa-cloud-upload-alt default-upload-icon"></i>
        <i class="fas fa-video video-upload-icon" style="display: none"></i>
        <i class="far fa-image image-upload-icon" style="display: none"></i>
        <i class="fas fa-file-alt text-upload-icon" style="display: none"></i>
        <span class="progress-display">upload</span>
        <div class="liquid" id="liquid"></div>
      </button>
      <!-- <button type="submit" class="btn btn-outline-primary"><i class="fas fa-cloud-upload-alt"></i>&nbsp;Upload</button> -->
    </div>
  </form>
</div>
